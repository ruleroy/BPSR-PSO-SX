{
    "name": "bpsr_pso_sx_rule",
    "productName": "BPSR PSO SX - Rule",
    "version": "0.2.0",
    "description": "Blue Protocol: Star Resonance",
    "main": "src/index.js",
    "scripts": {
        "start": "electron-forge start",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "publish": "electron-forge publish",
        "lint": "echo \"No linting configured\"",
        "format": "prettier --write \"**/*.{js,json,html}\"",
        "check-format": "prettier --check \"**/*.{js,json,html}\""
    },
    "config": {
        "forge": {
            "publishers": [
                {
                    "name": "@electron-forge/publisher-github",
                    "config": {
                        "repository": {
                            "owner": "Sola-Ray",
                            "name": "BPSR-PSO-SX"
                        },
                        "prerelease": true,
                        "draft": false
                    }
                }
            ],
            "packagerConfig": {
                "name": "BPSR PSO SX",
                "icon": "./resources/app.ico",
                "asar": true,
                "ignore": [
                    "^/\\.vs($|/)",
                    "^/_vdata_dumps($|/)",
                    "^/logs($|/)?",
                    "^/tests?($|/)",
                    "^/\\.git($|/)"
                ]
            },
            "makers": [
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin",
                        "linux",
                        "win32"
                    ]
                },
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "setupIcon": "./resources/app.ico",
                        "createDesktopShortcut": true
                    }
                }
            ]
        }
    },
    "keywords": [],
    "author": {
        "name": "Sola",
        "email": "solaraycontact@gmail.com"
    },
    "license": "MIT",
    "dependencies": {
        "cap": "^0.2.1",
        "cors": "^2.8.5",
        "electron-squirrel-startup": "^1.0.1",
        "electron-updater": "^6.6.2",
        "express": "^5.1.0",
        "google-protobuf": "^3.21.4",
        "long": "^5.3.2",
        "protobufjs": "^7.5.3",
        "socket.io": "^4.8.1",
        "uuid": "^13.0.0",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "@electron-forge/cli": "^7.8.3",
        "@electron-forge/maker-deb": "^7.8.3",
        "@electron-forge/maker-rpm": "^7.8.3",
        "@electron-forge/maker-squirrel": "^7.8.3",
        "@electron-forge/maker-zip": "^7.8.3",
        "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
        "@electron-forge/plugin-fuses": "^7.8.3",
        "@electron-forge/publisher-github": "^7.8.3",
        "@electron/fuses": "^1.8.0",
        "electron": "37.3.1",
        "esbuild": "^0.25.11",
        "prettier": "^3.6.2"
    }
}
